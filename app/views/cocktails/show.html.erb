<h1><%= @cocktail.name %></h1>

<%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
  <i class="fa fa-trash destroy_cocktail"></i>
    <% end %>

<% if @cocktail.photo? %>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<%end %>

<ul>
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description%>
    <%= dose.ingredient.name%>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fa fa-trash destroy_dose"></i>
    <% end %>
  </li>
<% end %>
</ul>

<%= link_to "Add new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"  %>

<%= link_to "Back to all cocktails", root_path %>
